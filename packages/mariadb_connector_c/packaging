set -e -x

#VERSION=2.3.5
#VERSION=3.0.4
#VERSION=3.1.1
VERSION=3.1.12

tar xzf mariadb_connector_c/mariadb-connector-c-${VERSION}-src.tar.gz

pushd mariadb-connector-c-${VERSION}-src > /dev/null
	mkdir bld
	cd bld
	cmake .. -DCMAKE_INSTALL_PREFIX=${BOSH_INSTALL_TARGET}
	make
	make install
popd > /dev/null
